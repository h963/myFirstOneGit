/* pages/tdog/tdog.wxss */
page {
  background-color: #f1f1f1;
}
.headBox {
  background-color: #fff;
  border-top: 1rpx solid #cccccc;
  padding: 44rpx 0 45rpx 30rpx;
}
.headBoxImg {
  float: left;
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
.headBoxImg image {
  width: 100%;
  height: 100%;
}
.headBoxText {
  padding-left: 20rpx;
  height: 300rpx;
  float: left;
  display: flex;
  flex-direction: column;
}
.headBoxText view {
  flex: 1;
  line-height: 100rpx;
}
.headBoxText text {
  font-size: 30rpx;
}
.headBoxText .Color6a {
  color: #6a6a6a;
}


.messageFH {
  margin-top: 35rpx;
  background-color: #fff;
}
.messageFHTit {
  padding: 30rpx 0 30rpx 30rpx;
  width: 100% - 30rpx -30rpx;
  border-bottom: 1rpx solid #f1f1f1;
  font-size: 32rpx;
}
.messageFHTit strong {
  border-left: 5rpx solid red;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.messageFHTit .width180{
  display: inline-block;
  width: 180rpx;
}
.messageFHTit text {
  font-size: 30rpx;
}

.productBtn {
  background-color: #eee;
  width: 540rpx;
  height: 80rpx;
  display: flex;
  margin: 56rpx auto;
}
.productBtn view {
  flex: 1;
}
.productBtn view button{
  margin: 0;
  padding: 0;
  width: 270rpx;
  height: 100%;
  line-height: 80rpx;
  font-weight: 400;
  border-radius: 0;
}
.productBtn .reset button{
  font-size: 34rpx;
  color: #fff;
  background-color: #969696;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.productBtn .save button{
  font-size: 34rpx;
  color: #fff;
  background-color: #f24625;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}